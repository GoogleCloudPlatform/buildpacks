load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library", "go_test")

# Go flex-gomod Buildpack
load("//tools:defs.bzl", "buildpack", "buildpack_using_runner")

licenses(["notice"])

buildpack(
    name = "flex_gomod",
    executables = [
        ":main",
    ],
    prefix = "go",
    version = "0.9.0",
    visibility = [
        "//builders:go_builders",
    ],
)

buildpack_using_runner(
    name = "flex_gomod_using_runner",
    buildpack_id = "google.go.flex_gomod",
    prefix = "go",
    version = "0.9.0",
    visibility = [
        "//builders:go_builders",
    ],
)

go_binary(
    name = "main",
    srcs = ["main.go"],
    # Strip debugging information to reduce binary size.
    gc_linkopts = [
        "-s",
        "-w",
    ],
    deps = [
        "//pkg/env",
        "//pkg/gcpbuildpack",
    ],
)

go_library(
    name = "flex_gomodlib",
    srcs = ["main.go"],  #keep
    importpath = "github.com/GoogleCloudPlatform/buildpacks/" + package_name(),
    visibility = [
        "//builders:go_builders",
    ],
    deps = [
        "//pkg/env",
        "//pkg/gcpbuildpack",
    ],
)

go_test(
    name = "main_test",
    size = "small",
    srcs = ["main_test.go"],
    embed = [":main"],
    rundir = ".",
    deps = [
        "//internal/buildpacktest",
        "//pkg/gcpbuildpack",
    ],
)
