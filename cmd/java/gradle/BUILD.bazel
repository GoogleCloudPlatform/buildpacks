load("@io_bazel_rules_go//go:def.bzl", "go_binary")

# Buildpack for Gradle.
load("//tools:defs.bzl", "buildpack", "buildpack_using_runner")

licenses(["notice"])

buildpack(
    name = "gradle",
    executables = [
        ":main",
    ],
    prefix = "java",
    version = "0.10.0",
    visibility = [
        "//builders:java_builders",
    ],
)

buildpack_using_runner(
    name = "gradle_using_runner",
    buildpack_id = "google.java.gradle",
    prefix = "java",
    version = "0.10.0",
    visibility = [
        "//builders:java_builders",
    ],
)

go_binary(
    name = "main",
    srcs = ["main.go"],
    # Strip debugging information to reduce binary size.
    gc_linkopts = [
        "-s",
        "-w",
    ],
    deps = [
        "//cmd/java/gradle/lib",
        "//pkg/gcpbuildpack",
    ],
)
