load("@io_bazel_rules_go//go:def.bzl", "go_binary")

# Buildpack to validate Ruby app for App Engine.
load("//tools:defs.bzl", "buildpack", "buildpack_using_runner")

licenses(["notice"])

buildpack(
    name = "appengine_validation",
    srcs = [
        "scripts/check_gemfile_version.rb",
    ],
    executables = [
        ":main",
    ],
    prefix = "ruby",
    version = "0.9.0",
    visibility = [
        "//builders:ruby_builders",
    ],
)

buildpack_using_runner(
    name = "appengine_validation_using_runner",
    srcs = [
        "scripts/check_gemfile_version.rb",
    ],
    buildpack_id = "google.ruby.appengine-validation",
    prefix = "ruby",
    version = "0.9.0",
    visibility = [
        "//builders:ruby_builders",
    ],
)

go_binary(
    name = "main",
    srcs = ["main.go"],
    # Strip debugging information to reduce binary size.
    gc_linkopts = [
        "-s",
        "-w",
    ],
    deps = [
        "//cmd/ruby/appengine_validation/lib",
        "//pkg/gcpbuildpack",
    ],
)
