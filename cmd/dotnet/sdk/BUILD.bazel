load("@io_bazel_rules_go//go:def.bzl", "go_binary")

# Buildpack for the .NET runtime.
load("//tools:defs.bzl", "buildpack", "buildpack_using_runner")

licenses(["notice"])

buildpack(
    name = "sdk",
    executables = [
        ":main",
    ],
    prefix = "dotnet",
    version = "0.9.1",
    visibility = [
        "//builders:dotnet_builders",
    ],
)

buildpack_using_runner(
    name = "sdk_using_runner",
    buildpack_id = "google.dotnet.sdk",
    prefix = "dotnet",
    version = "0.9.1",
    visibility = [
        "//builders:dotnet_builders",
    ],
)

go_binary(
    name = "main",
    srcs = ["main.go"],
    # Strip debugging information to reduce binary size.
    gc_linkopts = [
        "-s",
        "-w",
    ],
    deps = [
        "//cmd/dotnet/sdk/lib",
        "//pkg/gcpbuildpack",
    ],
)
