load("@io_bazel_rules_go//go:def.bzl", "go_binary")

# Buildpack for the Node.js runtime.
load("//tools:defs.bzl", "buildpack", "buildpack_using_runner")

licenses(["notice"])

buildpack(
    name = "functions_framework",
    srcs = [
        "bytecode_cache/main.js",
        "bytecode_cache/runtime-cache-symlink.sh",
        "converter/without-framework-compat/package.json",
        "converter/without-framework-compat/package-lock.json",
        "converter/without-framework/package.json",
        "converter/without-framework/package-lock.json",
    ],
    executables = [
        ":main",
    ],
    prefix = "nodejs",
    version = "0.9.4",
    visibility = [
        "//builders:nodejs_builders",
    ],
)

buildpack_using_runner(
    name = "functions_framework_using_runner",
    srcs = [
        "bytecode_cache/main.js",
        "bytecode_cache/runtime-cache-symlink.sh",
        "converter/without-framework-compat/package.json",
        "converter/without-framework-compat/package-lock.json",
        "converter/without-framework/package.json",
        "converter/without-framework/package-lock.json",
    ],
    buildpack_id = "google.nodejs.functions-framework",
    prefix = "nodejs",
    version = "0.9.4",
    visibility = [
        "//builders:nodejs_builders",
    ],
)

go_binary(
    name = "main",
    srcs = ["main.go"],
    # Strip debugging information to reduce binary size.
    gc_linkopts = [
        "-s",
        "-w",
    ],
    deps = [
        "//cmd/nodejs/functions_framework/lib",
        "//pkg/gcpbuildpack",
    ],
)
