load("@io_bazel_rules_go//go:def.bzl", "go_binary")

# Buildpack for the PHP runtime.
load("//tools:defs.bzl", "buildpack", "buildpack_using_runner")

licenses(["notice"])

buildpack(
    name = "composer_install",
    executables = [
        ":main",
    ],
    prefix = "php",
    version = "0.0.1",
    visibility = [
        "//builders:php_builders",
    ],
)

buildpack_using_runner(
    name = "composer_install_using_runner",
    buildpack_id = "google.php.composer-install",
    prefix = "php",
    version = "0.0.1",
    visibility = [
        "//builders:php_builders",
    ],
)

go_binary(
    name = "main",
    srcs = ["main.go"],
    # Strip debugging information to reduce binary size.
    gc_linkopts = [
        "-s",
        "-w",
    ],
    deps = [
        "//cmd/php/composer_install/lib",
        "//pkg/gcpbuildpack",
    ],
)
